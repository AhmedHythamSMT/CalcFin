<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Calcfinal" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- light mode -->
    <!--background-->
    <style name="screen">
        <item name="background">@color/white</item>
    </style>

    <!--text light-->
    <style name="text">
        <item name="android:textColor">@color/black</item>
    </style>
    <!-- btn memory light-->
    <style name="btnMemColor">
        <item name="backgroundTint">@color/grey</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <!-- btn operations light-->
    <style name="btnOperationsColor">
        <item name="backgroundTint">@color/light_purple</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <!-- btn equal light-->
    <style name="btnEqColor">
        <item name="backgroundTint">@color/mustard</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <!-- btn numbers light-->
    <style name="btnNumColor">
        <item name="backgroundTint">@color/baby_black</item>
        <item name="android:textColor">#fff</item>
    </style>



</resources>